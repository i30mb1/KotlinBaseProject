<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color ... -->
        <item name="android:statusBarColor">@color/myColorPrimaryDark</item>

        <!-- Buttons, Toolbar, Selected Items, Tabs, Progress -->
        <item name="colorPrimary">@color/myColorPrimary</item>
        <!-- A color top of the primary color (text color on Button, Toolbar, ...) -->
        <item name="colorOnPrimary">@color/myColorOnPrimary</item>
        <!-- Fab, Slider, CheckBox, Switch, Radio Button -->
        <item name="colorSecondary">@color/myColorSecondary</item>
        <!-- A color on top of the secondary color (text/icon color on RadioButton, Switch, ...) -->
        <item name="colorOnSecondary">@color/myColorOnSecondary</item>

        <!-- background color behind scrollable content -->
        <item name="android:colorBackground">@color/myColorBackground</item>
        <!-- surface colors (CardView, Sheet, Menu, BackgroundColorDialog) -->
        <item name="colorSurface">@color/myColorSurface</item>
        <!-- color drawn on top of the surface color (background color snackbar, ...) -->
        <item name="colorOnSurface">@color/myColorOnSurface</item>

        <!-- My custom attribute -->
        <item name="myCustomAttr">@color/myColorCustom</item>

        <!-- dark icons for status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- windows transition animation between activities -->
        <item name="android:windowAnimationStyle">@style/Animation.Window</item>

        <!-- custom shapes for all small components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>

        <!-- theme for dialog -->
        <item name="materialAlertDialogTheme">@style/Widget.Dialog</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.HeadLine1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HeadLine2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HeadLine3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HeadLine4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HeadLine5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HeadLine6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.OverLine</item>
    </style>

    <style name="Theme.N7">

    </style>

</resources>