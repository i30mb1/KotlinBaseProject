<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color ... -->
        <item name="colorPrimaryDark">@color/myColorPrimaryDark</item>

        <!-- Buttons, Toolbar, Selected Items, Tabs, Progress -->
        <item name="colorPrimary">@color/myColorPrimary</item>
        <!-- A color top of the primary color (text color on Button, Toolbar, ...) -->
        <item name="colorOnPrimary">@color/myColorOnPrimary</item>
        <!-- Fab, Slider, CheckBox, Switch, Radio Button -->
        <item name="colorSecondary">@color/myColorSecondary</item>
        <!-- A color on top of the secondary color (text/icon color on RadioButton, Switch, ...) -->
        <item name="colorOnSecondary">@color/myColorOnSecondary</item>

        <!-- background color behind scrollable content -->
        <item name="android:colorBackground">@color/myColorBackground</item>
        <!-- surface colors (CardView, Sheet, Menu) -->
        <item name="colorSurface">@color/myColorSurface</item>
        <!-- color drawn on top of the surface color (background color snackbar, ...) -->
        <item name="colorOnSurface">@color/myColorOnSurface</item>

        <!-- My custom attribute -->
        <item name="myCustomAttr">@color/myColorCustom</item>

        <!-- dark icons for status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- windows transition animation between activities -->
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationTransition</item>

        <!-- custom shapes for all small components -->
        <item name="shapeAppearanceSmallComponent">@style/MySmallComponent.Light</item>
        <item name="shapeAppearanceMediumComponent">@style/MyMediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/MyLargeComponent</item>

        <!-- theme for dialog -->
        <item name="materialAlertDialogTheme">@style/MyMaterialAlertDialogTheme</item>

        <item name="textAppearanceHeadline1">@style/HeadLine1</item>
        <item name="textAppearanceHeadline2">@style/HeadLine2</item>
        <item name="textAppearanceHeadline3">@style/HeadLine3</item>
        <item name="textAppearanceHeadline4">@style/HeadLine4</item>
        <item name="textAppearanceHeadline5">@style/HeadLine5</item>
        <item name="textAppearanceHeadline6">@style/HeadLine6</item>
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Subtitle2</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="textAppearanceCaption">@style/Caption</item>
        <item name="textAppearanceButton">@style/Button</item>
        <item name="textAppearanceOverline">@style/OverLine</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.MyApp.Main" parent="AppTheme">

    </style>

    <!-- share for light theme can be different from dark theme -->
    <style name="MySmallComponent.Light" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/dimen_corner_size</item>
    </style>

    <style name="MyMediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">

    </style>

    <style name="MyLargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">

    </style>

    <style name="MyWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="Widget.AppCompat.ProgressBar.Horizontal.MyProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:scaleY">5</item>
    </style>

    <style name="HeadLine1" parent="TextAppearance.MaterialComponents.Headline1">

    </style>

    <style name="HeadLine2" parent="TextAppearance.MaterialComponents.Headline2">

    </style>

    <style name="HeadLine3" parent="TextAppearance.MaterialComponents.Headline3">

    </style>

    <style name="HeadLine4" parent="TextAppearance.MaterialComponents.Headline4">

    </style>

    <style name="HeadLine5" parent="TextAppearance.MaterialComponents.Headline5">

    </style>

    <style name="HeadLine6" parent="TextAppearance.MaterialComponents.Headline6">

    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/myTextColorPrimary</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">

    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">

    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">

    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">

    </style>

    <style name="OverLine" parent="TextAppearance.MaterialComponents.Overline">

    </style>

    <style name="MyMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MyDialogContainerAttributes</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MyDialogContentAttributes</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationStyle</item>
    </style>

    <style name="MyWindowAnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="MyDialogContainerAttributes" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundInsetTop">80dp</item>
        <item name="backgroundInsetBottom">80dp</item>
        <item name="backgroundInsetStart">24dp</item>
        <item name="backgroundInsetEnd">24dp</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="MyDialogContentAttributes" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/myTextColorPrimary</item>
    </style>

</resources>