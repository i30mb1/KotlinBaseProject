<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color ...-->
        <item name="colorPrimaryDark">@color/myColorOnPrimary</item>

        <!-- Buttons, Toolbar, Selected Items, Tabs, Progress -->
        <item name="colorPrimary">@color/myColorPrimary</item>
        <!-- A color top of the primary color (text color on Button, Toolbar, ...) -->
        <item name="colorOnPrimary">@color/myColorOnPrimary</item>
        <!-- A tonal variation of the primary color -->
        <item name="colorPrimaryVariant">@color/myColorPrimaryVariant</item>

        <!-- Fab, Slider, CheckBox, Switch, Radio Button -->
        <item name="colorSecondary">@color/myColorSecondary</item>
        <!--  A color on top of the secondary color -->
        <item name="colorOnSecondary">@color/myColorOnSecondary</item>
        <!--  A tonal variation of the secondary color -->
        <item name="colorSecondaryVariant">@color/myColorSecondaryVariant</item>
        <!-- The color used for elements displayed on top of your error color -->
        <item name="colorError">@color/myColorError</item>

        <!-- My custom attribute -->
        <item name="myBackgroundColor">@color/myColorBackground</item>

        <!-- dark icons for status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- windows transition animation between activities -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- custom shapes for all small components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent.Light</item>

        <!-- Style to use for Snackbar in this theme -->
        <item name="snackbarStyle">@style/MySnackbarStyle</item>
        <!-- Style to use for action button within a Snackbar in this theme. -->
        <item name="snackbarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Snackbar</item>
        <!-- Style to use for message text within a Snackbar in this theme. -->
        <item name="snackbarTextViewStyle">@style/Widget.MaterialComponents.Snackbar.TextView</item>

    </style>

    <!-- Light Theme -->
    <style name="Theme.MyApp.Main" parent="AppTheme">

    </style>

    <style name="MySnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">

    </style>

    <!--  share for light theme can be different from dark theme  -->
    <style name="ShapeAppearance.MyApp.SmallComponent.Light" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/dimen_corner_size</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="Widget.AppCompat.ProgressBar.Horizontal.MyProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:scaleY">5</item>
    </style>
</resources>